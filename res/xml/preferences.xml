                    android:summary="@string/rate_me_summary"
                    android:key="rate_app"/>
        <Preference android:title="@string/mail_me"
                    android:summary="@string/mail_me_summary"
                    android:key="mail_me"/>
        <Preference android:title="@string/app_version"
                    android:summary="@string/app_version_summary" />
