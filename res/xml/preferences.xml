    <PreferenceCategory android:title="@string/app_preference">
        <CheckBoxPreference android:id="@+id/show_licence_agreement_preference"
                            android:title="@string/show_licence_agreement"
                            android:summary="@string/show_licence_agreement_summary"
                            android:key="licence_key"/>
        <Preference android:title="@string/display_licence_agreement"
                    android:summary="@string/display_licence_agreement_summary"
                    android:key="display_licence"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/support">
